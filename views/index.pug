extends layout 

block layout-content
    div.TitleView
        h1 Personal Tracker
        div.MainView
            form(id="main-form" method="POST" action="/personal-tracker")
            h4 How many glasses of water have you had? 
                select(id="select")
                    option(value="1") 1
                    option(value="2") 2
                    option(value="3") 3
                    option(value="4") 4
                    option(value="5") 5
                    option(value="6") 6
                    option(value="7") 7
                    option(value="8") 8
                .whitespace(style='white-space:pre;')
            h4 Have you urinated since last check?        
                select(name="boolSelect")
                    option(value="1") Yes 
                    option(value="0") No
                .whitespace(style='white-space:pre;')
            button.btn-primary(type="submit") Submit